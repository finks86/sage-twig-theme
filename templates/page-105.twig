<div class="container-fluid">
    <div class="row">

        <div class="products products-tabletup hidden-xs">
        <div class="title-container">
            <h2>{{ page.get_field('title') |striptags('<strong>') }}</h2>
        </div>
        {% for item in page.get_field('items') %}
            <div class="product-list">
            {% for product in item.products %}
                <div class="product-item">
                    <span>{{ product.title }}</span>
                </div>

            {% endfor %}
            </div>
        {% endfor %}
        </div>
        <div class="products products-mobiledown visible-xs">
            <div class="title-container">
                <h2>{{ page.get_field('title') |striptags('<strong>') }}</h2>
            </div>
            {% for item in page.get_field('items') %}
                <a data-toggle="collapse" href="#product-list-{{ loop.index }}">Category {{ loop.index }}</a>
                <div id="product-list-{{ loop.index }}" class="product-list collapse">
                    {% for product in item.products %}
                        <div class="product-item">
                            <span>{{ product.title }}</span>
                        </div>

                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>